<style>
    .section {
        height: auto;
        padding: 5rem 2rem 2rem 2rem;
    }

    .project {
        max-width: 80rem;
        margin: 0 auto;
    }

    .project__label {
        margin-bottom: 3rem;
    }

    .project__label h1 {
        margin: 0;
        margin-bottom: 1rem;
        font-size: 48px;
        font-weight: 400;
        color: var(--primary-text);
    }

    .project__label span {
        margin-top: 1rem;
        font-size: 20px;
        line-height: 1.6;
        text-align: justify;
        color: var(--secondary-text);
    }

    .project__card {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 24px;
        padding-bottom: 2rem;
    }

    .project__buttons {
        display: flex;
        justify-content: center;
        margin-top: 1rem;
    }

    .project__buttons {
        display: flex;
        gap: 1.5rem;
    }

    .btn-icon {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 12px 14px;
        /* background-color: #f3f4f6; */
        color: #000;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 8px;
        text-decoration: none;
        transition:
            background-color 0.25s ease,
            transform 0.2s ease,
            color 0.25s ease;
    }

    .btn-icon svg {
        width: 26px;
        height: 26px;
        transition:
            fill 0.25s ease,
            color 0.25s ease;
    }

    .btn-icon:hover {
        background-color: #e5e7eb;
        transform: translateY(-2px);
    }

    .btn-icon:hover,
    .btn-icon:hover path {
        color: var(--green-color);
        fill: var(--green-color);
    }

    /* Estilos base (desktop-first en tu caso) */
    /* Ya tienes tu layout principal, así que mantenemos lo existente */

    /* ≤ 1300px pero ≥ 1025px */
    @media (max-width: 1300px) and (min-width: 1025px) {
        .section {
            padding: 4rem 2rem;
        }

        .project__label h1 {
            font-size: 42px;
        }

        .project__label span {
            font-size: 18px;
        }
    }

    /* ≤ 1024px (tablets grandes) */
    @media (max-width: 1024px) {
        .section {
            padding: 3rem 1.5rem;
            height: auto;
        }

        .project__label h1 {
            font-size: 36px;
        }

        .project__label span {
            font-size: 18px;
            text-align: left;
        }

        .project__card {
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        }
    }

    /* ≤ 768px (tablets pequeñas y phablets) */
    @media (max-width: 768px) {
        .project__label {
            margin-bottom: 2rem;
        }

        .project__label h1 {
            font-size: 30px;
        }

        .project__label span {
            font-size: 16px;
        }

        .project__buttons {
            flex-direction: column;
            align-items: stretch;
        }

        .btn-icon {
            justify-content: center;
        }
    }

    /* ≤ 480px (móviles) */
    @media (max-width: 480px) {
        .section {
            padding: 2rem 1rem;
        }

        .project__label h1 {
            font-size: 26px;
            text-align: center;
        }

        .project__label span {
            font-size: 14px;
            text-align: center;
        }

        .project__card {
            grid-template-columns: 1fr;
        }

        .project__buttons {
            flex-direction: column;
            gap: 1rem;
        }

        .btn-icon {
            font-size: 0.9rem;
            padding: 10px 12px;
        }
    }
</style>
