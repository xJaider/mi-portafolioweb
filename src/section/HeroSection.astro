---
import DescargarCV from "../doc/Ejemplo-de-descarga-pdf.pdf";
---

<section id="home" class="section">
    <div class="hero">
        <div class="hero__content">
            <div class="hero__label">
                <span class="point"></span>
                Hola, mi nombre es Jaider
            </div>
            <h1>
                Developer Backend Junior<span class="point"></span>
            </h1>
            <div class="hero__description">
                <p>
                    Soy un desarrollador backend en formación, con enfoque en construir soluciones eficientes y escalables. Estudiante de Ingeniería de Sistemas y en constante aprendizaje de tecnologías modernas.
                </p>
            </div>
            <div class="hero__actions">
                <a href="#projects">
                    <button class="btn-primary">Ver mis proyectos</button>
                </a>
                <a href={DescargarCV} download="pdf-ejemplo.pdf">
                    <button class="btn-secondary">Descargar CV</button>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .section {
        /* padding-top: 4rem; */
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero {
        width: 100%;
        max-width: 80rem;
        display: flex;
        justify-content: center;
    }

    .hero__content {
        max-width: 45rem;
        text-align: left;
    }

    .hero__label {
        display: inline-flex;
        align-items: center;
        color: var(--green-color);
        background: var(--pastel-green-light-color);
        padding: 8px 16px;
        margin: 0 0 32px;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .point {
        height: 8px;
        width: 8px;
        border-radius: 50%;
        background: var(--green-color);
        margin-right: 8px;
        display: inline-block;
    }

    h1 {
        margin: 0 0 32px 0;
        font-size: 5rem;
        font-weight: 500;
        line-height: 1.1;
        color: var(--primary-color);
        letter-spacing: -0.02em;
    }

    h1 .point {
        background: var(--green-color);
        margin-left: 8px;
        margin-right: 0;
    }

    .hero__description {
        margin-bottom: 40px;
    }

    .hero__description p {
        margin: 0 0 20px 0;
        font-size: 1.125rem;
        line-height: 1.7;
        color: #6b7280;
        text-align: justify;
    }

    .hero__description p:last-child {
        margin-bottom: 0;
    }

    .hero__actions {
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
    }

    .btn-primary {
        background: #1f1f1f;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary:hover {
        background: #333;
        transform: translateY(-1px);
    }

    .btn-primary::after {
        content: "→";
        font-size: 1.2rem;
    }

    .btn-secondary {
        background: transparent;
        color: #1f1f1f;
        border: 1px solid #e5e7eb;
        padding: 12px 24px;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-secondary:hover {
        border-color: #1f1f1f;
        transform: translateY(-1px);
    }

    .btn-secondary::after {
        content: "↗";
        font-size: 1rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .section {
            padding: 1rem;
        }

        h1 {
            font-size: 2.5rem;
        }

        .hero__description p {
            font-size: 1rem;
        }

        .hero__actions {
            flex-direction: column;
        }

        .btn-primary,
        .btn-secondary {
            width: 100%;
            justify-content: center;
        }
    }
</style>
