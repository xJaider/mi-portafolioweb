---
const { title, skillsList } = Astro.props;
---

<div class="tarjeta">
    <div class="tarjeta__cabecera">
        <svg
            class="tarjeta__icono"
            xmlns="http://www.w3.org/2000/svg"
            width="24px"
            height="24px"
            viewBox="0 0 24 24"
            fill="none"
        >
            <circle
                cx="12"
                cy="9"
                r="7"
                stroke="currentColor"
                stroke-width="1.5"></circle>
            <path
                d="M7.35111 15L6.71424 17.323C6.0859 19.6148 5.77173 20.7607 6.19097 21.3881C6.3379 21.6079 6.535 21.7844 6.76372 21.9008C7.41635 22.2331 8.42401 21.7081 10.4393 20.658C11.1099 20.3086 11.4452 20.1339 11.8014 20.0959C11.9335 20.0818 12.0665 20.0818 12.1986 20.0959C12.5548 20.1339 12.8901 20.3086 13.5607 20.658C15.576 21.7081 16.5837 22.2331 17.2363 21.9008C17.465 21.7844 17.6621 21.6079 17.809 21.3881C18.2283 20.7607 17.9141 19.6148 17.2858 17.323L16.6489 15"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"></path>
        </svg>
        <h4>{title}</h4>
    </div>
    <div class="tarjeta__habilidades">
        {
            skillsList.map((skill: any) => (
                <span class="tarjeta__item">{skill}</span>
            ))
        }
    </div>
</div>

<style>
    .tarjeta {
        display: flex;
        flex-direction: column;
        background: var(--white-background);
        border: 1px solid var(--light-grey-color);
        border-radius: 12px;
        padding: 1.5rem;
    }

    .tarjeta__cabecera {
        display: flex;
        align-items: center;
        gap: 20px;
        padding-bottom: 1.5rem;
    }

    .tarjeta__cabecera h4 {
        margin: 0;
        font-size: 18px;
        font-weight: 500;
    }

    .tarjeta__icono {
        color: var(--green-color);
    }

    .tarjeta__habilidades {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        flex: 1;
        align-content: flex-start;
    }

    .tarjeta__item {
        padding: 6px 12px;
        background: var(--pastel-green-light-color);
        color: var(--green-color);
        font-size: 14px;
        border-radius: 5px;
        font-weight: 400;
    }

    /* Responsive design */
    @media (max-width: 768px) {
        .tarjeta {
            padding: 20px;
        }

        .tarjeta h4 {
            font-size: 16px;
        }

        .tarjeta__item {
            font-size: 13px;
            padding: 5px 10px;
        }
    }
</style>
