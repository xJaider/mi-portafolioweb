---
import Image from "astro/components/Image.astro";

const { image, tag, title, state, description, tecnologies } = Astro.props;
---

<div class="tarjeta">
    <div class="tarjeta__imagen">
        <!-- {tag && <span class="tarjeta__etiqueta">{tag}</span>} -->
        {tag && <span class={`tarjeta__etiqueta ${tag.toLowerCase()}`}>{tag.replace("_"," ")}</span>}
        <!-- <img src={image} alt={title} /> -->
        <Image src={image} alt={title} />
    </div>
    <div class="tarjeta__contenido">
        <div class="tarjeta__label">
            <h3>{title}</h3>
            <span class={`estado ${state.toLowerCase()}`}>{state.replace("_"," ")}</span>
        </div>
        <p>{description}</p>
        <div class="tarjeta__tecnologias">
            {
                tecnologies.map((tecnology: any) => (
                    <span class="tarjeta__item">{tecnology}</span>
                ))
            }
        </div>
    </div>
</div>

<style>
    .tarjeta {
        height: 500px;
        border-radius: 12px;
        overflow: hidden;
        background: #fff;
        display: flex;
        flex-direction: column;
        border: 1px solid var(--light-grey-color);
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    }

    .tarjeta__imagen {
        position: relative; 
        width: 100%;
        height: 200px;
        overflow: hidden;
    }

    .tarjeta__imagen img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .tarjeta__etiqueta {
        position: absolute;
        top: 10px;
        left: 10px;
        background: #ff4757;
        color: #fff;
        font-size: 0.8rem;
        font-weight: 600;
        padding: 0.3rem 0.75rem;
        border-radius: 6px;
        pointer-events: none;
    }

    .tarjeta__etiqueta.proyecto_personal { background-color: var(--green-color); }
    .tarjeta__etiqueta.proyecto_acad√©mico { background-color: orangered; }

    .tarjeta__contenido {
        padding: 1rem 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .tarjeta__label {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 0.5rem;
        margin: 0.5rem 0;
    }

    .tarjeta__label h3 {
        margin: 0;
        font-size: 1.25rem;
        font-weight: 600;
        color: #222;
    }

    .estado {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
        color: #fff;
        text-transform: capitalize;
    }

    .estado.completado { background-color: var(--green-color); }
    .estado.en_desarrollo { background-color: var(--light-grey-color); color: var(--primary-color); }

    p {
        text-align: justify;
        height: 125px;
        margin: 0;
        font-size: 0.95rem;
        color: #555;
        line-height: 1.4;
    }

    .tarjeta__tecnologias {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }

    .tarjeta__item {
        background-color: var(--light-grey-color);
        color: var(--primary-color);
        padding: 0.25rem 0.75rem;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 500;
    }
</style>
